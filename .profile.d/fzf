# Setup fzf
if [[ ! "$PATH" == *$HOMEBREW_PREFIX/opt/fzf/bin* ]]; then
  export PATH="${PATH:+${PATH}:}$HOMEBREW_PREFIX/opt/fzf/bin"
fi

# Auto-completion
[[ $- == *i* ]] && source "$HOMEBREW_PREFIX/opt/fzf/shell/completion.bash" 2> /dev/null

# Key bindings
source "$HOMEBREW_PREFIX/opt/fzf/shell/key-bindings.bash"

# Configuration
export FZF_DEFAULT_OPTS="--walker-skip=.git,node_modules,.terraform,.direnv"

# CTRL-R to search history using fzf
#
#   * sort may take up all the height
#   * chronological order,
#   * exact search
#   * preview command by pressing ?
#
export FZF_CTRL_R_OPTS="--height ~100% --no-sort --exact --preview 'echo {}' --preview-window down:3:hidden:wrap --bind '?:toggle-preview'"

# ALT-C to switch directories
#
# * preview a directory tree
#
export FZF_ALT_C_OPTS="--preview 'tree -C {}'"
