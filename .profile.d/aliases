# nice directory listing
alias l="ls -lah"

# nice directory tree listing, but just 2 levels
alias tree2="tree -L 2 --dirsfirst"

# I use git so often that aliasing it saves a lot
alias g="git"
# I often mistype gs and then this stupid ghost script shell pops up
alias gs="git status"

# Prefer neovim over vim
alias vim="nvim"
alias vi="nvim"

