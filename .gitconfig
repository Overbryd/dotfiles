[apply]
	whitespace = fix
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
[merge]
	log = true
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[user]
	name = Lukas Rieder
	email = l.rieder@gmail.com
[alias]
	s = status
	co = checkout
	history = "log -p"
	shallow-clone = "clone --depth=1"
  tree = "log --graph --oneline --all --decorate=full"
	pick = "cherry-pick"
  contributors = "shortlog -n -s --no-merges"
  amend = "commit -a --amend"
  amen = "commit --amend --no-edit"
  staged = "diff --staged"
[push]
	default = upstream
[status]
	submoduleSummary = true
[pull]
	ff = only
[safe]
	directory = /usr/local/dotfiles
